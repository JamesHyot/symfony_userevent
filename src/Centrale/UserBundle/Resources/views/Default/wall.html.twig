{%  extends "::base.html.twig" %}

 {% block body %}
     <div class="container">
         <div class="starter-template">
             <h1>Bienvenue {{ firstname }} {{ lastname }}</h1>
         </div>
         <div class="posts row">
             {% for post in posts %}
                 <div class="post col-md-12">
                     <p class="col-md-6">{{ post.author }}</p>
                     <p class="col-md-6">{{ post.message }}</p>
                 </div>
             {%  endfor %}
         </div>
         <div class="row">
             {{ form_start(form, {'attr' : {"class" : 'col-md-12'}}) }}
             {{ form_widget(form) }}
             {{ form_end(form) }}
         </div>
    </div>
 {% endblock %}
